@model IEnumerable<TeamPoints.Models.Premio>
@{
    ViewData["Title"] = "Premios";
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 m-0">Premios</h1>
    <a asp-action="Create" class="btn btn-primary">Nuevo</a>
</div>
<div class="card p-3 reveal">
    <table class="table table-hover align-middle">
        <thead><tr><th>Nombre</th><th class="text-end">Costo (pts)</th><th class="text-end"></th></tr></thead>
        <tbody>
        @foreach (var item in Model){
            <tr>
                <td>@item.Nombre</td>
                <td class="text-end fw-semibold">@item.CostoPuntos</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
