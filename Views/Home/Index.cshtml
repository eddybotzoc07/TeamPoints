@{
    ViewData["Title"] = "Home Page";
}

<div class="reveal">
    <div class="card p-5 mb-4">
        <div class="row align-items-center g-4">
            <div class="col-md-7">
                <h1 class="display-5 fw-bold mb-3" style="background: linear-gradient(90deg, var(--primary), var(--accent)); -webkit-background-clip:text; background-clip:text; color:transparent;">TeamPoints</h1>
                <p class="lead text-muted mb-4">Sistema de puntos y recompensas para tu equipo. Asigna logros, canjea premios y celebra el esfuerzo con una experiencia moderna.</p>
                <div class="d-flex gap-2">
                    <a class="btn btn-primary" asp-controller="Puntos" asp-action="Leaderboard">Ver Leaderboard</a>
                    <a class="btn btn-outline-primary" asp-controller="Puntos" asp-action="Historial">Mi Historial</a>
                </div>
            </div>
            <div class="col-md-5">
                <div class="p-4 rounded-4" style="background: linear-gradient(145deg, rgba(37,99,235,.12), rgba(56,189,248,.12)); border:1px solid var(--border);">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Usuarios activos</span>
                        <span class="fw-semibold">@User?.Identity?.Name</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Última semana</span>
                        <span class="badge rounded-pill badge-soft">Leaderboard</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Comienza ahora</span>
                        <a class="link-primary" asp-controller="Logros" asp-action="Index">Gestionar logros →</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
